ENABLE_CLOUD_UPLOAD=true
UPLOAD_SERVICE_URL=https://bird-upload-api.hugh-evans-dev.workers.dev
USER_ID=hugh
FEEDER_LOCATION=London, United Kingdom

# Motion detection
MOTION_ENABLED=false
MOTION_THRESHOLD=1000
FRAMES_BEFORE_DEPARTURE=10

# Scale (if you have one)
SCALE_ENABLED=true
WEIGHT_THRESHOLD=5
SCALE_REFERENCE_UNIT=-388.929792
# Adjust based on your scale calibration.py

# Camera settings
CAMERA_WARMUP_FRAMES=5
PHOTO_COOLDOWN=5.0

# Advanced settings
SCALE_WAIT_TIME=1.0
IMAGES_DIR=./images
SENSOR_CHECK_INTERVAL=0.2
DEBUG_MOTION=false

SCALE_TYPE=serial

# Pico Serial Settings (only used if SCALE_TYPE=serial)
PICO_SERIAL_PORT=/dev/ttyACM0
PICO_SERIAL_BAUD=115200
PICO_TIMEOUT=2.0
